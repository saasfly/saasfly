{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "build": "turbo build ",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:push": "cd ./packages/db/ && bun db:push",
    "dev": "turbo dev --parallel",
    "dev:web": "turbo dev --parallel --filter !stripe",
    "format": "turbo format --continue --ignore-path='../../.gitignore'",
    "format:fix": "turbo format --continue  --ignore-path='../../.gitignore'",
    "lint": "turbo lint -- --quiet --cache --cache-location='node_modules/.cache/.eslintcache' --ignore-pattern='src/app/[lang]/\\(docs\\)/docs/[[...slug]]/page.tsx' --ignore-pattern='src/app/[lang]/\\(marketing\\)/blog/[[...slug]]/page.tsx' --ignore-pattern='src/app/[lang]/\\(marketing\\)/blog/page.tsx' && manypkg check",
    "lint:fix": "turbo lint --continue -- --fix ",
    "typecheck": "turbo typecheck",
    "postinstall": "bun run check-deps",
    "check-deps": "check-dependency-version-consistency .",
    "gen": "turbo gen --config 'turbo/generators/config.ts'"
  },
  "devDependencies": {
    "@turbo/gen": "1.13.3",
    "check-dependency-version-consistency": "4.1.0",
    "prettier": "3.2.5",
    "tailwind-config-viewer": "^2.0.4",
    "turbo": "1.13.3",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": "@saasfly/prettier-config",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "packageManager": "bun@v1.1.10"
}
